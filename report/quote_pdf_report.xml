<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="custom_report_saleorder_document">
        <t t-set="company" t-value="doc.company_id"/>
        <t t-call="ld_cm_sale_customization.chintamani_quote_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />

                <div style="width: 100%; height: 100vh; margin: 0 auto; text-align: center; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif; display: flex; flex-direction: column; justify-content: space-between; background-color: #f7f7f7;">
                      <!-- Header Text - 20% -->
                      <div style="flex: 0 0 20%; font-size: 28px; font-weight: bold; color: #2f4f7f; padding: 20px; border-bottom: 2px solid #4f69c6;">
                        <span style="color: #4f69c6;">TECHNO-COMMERCIAL</span> QUOTATION
                      </div>
                      <!-- Product Image Frame - 60% -->
                        <div style="flex: 0 0 60%; display: flex; align-items: center; justify-content: center; padding: 20px; flex-direction: column;">
                          <div style="max-width: 400px; border: 2px solid #ddd; box-shadow: 0 0 10px rgba(0,0,0,0.1); margin: 0 auto;">
                            <img t-att-src="doc.get_l1_image()" alt="Product Image" style="width: 100%; max-width: 100%; height: auto; object-fit: cover;"/>
                          </div>
                          <div style="margin-top: 20px; background-color: #9dffba; padding: 10px; text-align: center;">
                            <strong t-esc="doc.get_l1_name()"/>
                          </div>
                        </div>
                      <!-- Footer Text - 20% -->
                      <div style="flex: 0 0 20%; font-size: 16px; color: #666; padding: 20px; border-top: 2px solid #4f69c6; line-height: 1.6;">
                        <span style="font-style: italic; color: #4f69c6;">"Thank you for considering our product. We are pleased to submit our best techno-commercial offer for your review."</span>
                      </div>
                </div>

                <!-- Page Break to Start Quotation on the Next Page -->
                    <div style="page-break-before: always;"/>


            <div class="page" style="font-size: 1.1em;">

                <div class="oe_structure"/>

                <h2 class="mt-4">
                    <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                    <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                    <span t-else="">Order # </span>
                    <span t-field="doc.name">SO0000</span>
                </h2>

                <div class="row" style="position: relative;">
    <div class="col-4" style="position: relative;">
        <strong>Customer Details</strong>
        <div t-field="doc.partner_id"
             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
    </div>
    <div class="col-4" style="border-left: 1px solid #ddd; padding-left: 20px; padding-right: 20px;">

    </div>
    <div class="col-4" style="border-left: 1px solid #ddd; padding-left: 20px; padding-right: 20px;">
<strong>Sales Person Details</strong>
        <div t-field="doc.user_id"
             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>

    </div>
</div>


                <div class="row mt-4 mb-2" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2" name="informations_reference">
                        <strong>Your Reference:</strong><br/>
                        <span class="m-0" t-field="doc.client_order_ref">SO0000</span>
                    </div>
                    <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2" name="informations_date">
                        <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
<!--                        <strong t-else="">Order Date:</strong><br/>-->
<!--                        <span class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'>2023-12-31</span>-->
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']"
                        class="col-auto col-3 mw-100 mb-2"
                        name="expiration_date">
                        <strong>Expiration:</strong><br/>
                        <span class="m-0" t-field="doc.validity_date">2023-12-31</span>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
<!--                        <strong>Salesperson:</strong><br/>-->
<!--                        <span class="m-0" t-field="doc.user_id">Mitchell Admin</span>-->
                    </div>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

                <div class="oe_structure"/>

                <table class="table table-sm o_main_table table-bordered mt-4" style="line-height: 2;">
                    <thead style="display: table-row-group bg-info">
                        <tr>
                            <th class="text-start">#</th>
                            <th class="text-start">Product</th>
                            <th class="text-start">Quantity</th>
                            <th class="text-start">Unit Price</th>
                            <th class="text-center">Tax</th>
                            <th class="text-end">SubTotal</th>
                        </tr>
                    </thead>

                    <tbody class="sale_tbody">
                        <t t-foreach="doc.get_default_l2()" t-as="line">
                            <t t-if="line[0] == 1">
                                <tr>
                                    <td name="td_section_line" style="background-color: #f2f2f2;" class="text-start" colspan="99">
                                        <strong t-esc="line[1]"/>
                                    </td>
                                </tr>
                            </t>

                            <t t-if="line[0] == 0">
                                <tr>
                                    <td class="text-start">
                                        <span t-esc="line[1]"/>
                                    </td>
                                    <td class="text-start">
                                        <span t-esc="line[2]"/>
                                    </td>
                                    <td class="text-start">
                                        <span t-esc="line[3]"/>
                                    </td>
                                    <td class="text-start">
                                        <span t-esc="line[4]"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line[5]"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="line[6]"/>
                                    </td>
                                </tr>
                            </t>

                        </t>
                    </tbody>
                </table>

                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                            <table class="table table-sm table-borderless">
                                <!-- Tax totals -->
                                <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                <t t-call="sale.document_tax_totals"/>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>

                <div t-if="not doc.signature" class="oe_structure"></div>
                <div t-else="" class="mt-4 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Signature</strong>
                    </div>
                    <div class="offset-8">
                        <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                    <div class="offset-8 text-center">
                        <span t-field="doc.signed_by">Oscar Morgan</span>
                    </div>
                </div>

                <div class="mt-5">
                    <h4>
                        <strong>Item Description</strong>
                    </h4>
                    <hr/>

                    <table class="table table-striped" style="line-height: 2;">
                        <thead style="display: table-row-group bg-info">
                            <tr>
                                <th class="text-start">#</th>
                                <th class="text-start">Product</th>
                                <th class="text-start">Description</th>
                            </tr>
                        </thead>

                        <tbody class="sale_tbody">
                            <t t-set="sq" t-value="1"/>
                            <t t-foreach="doc.get_default_l2()" t-as="line">
                                <t t-if="line[0] == 0">
                                    <tr>
                                        <td class="text-start">
                                            <span t-esc="sq"/>
                                        </td>
                                        <td class="text-start">
                                            <span t-esc="line[2]"/>
                                        </td>
                                        <td class="text-start">
                                            <span t-esc="line[7]"/>
                                        </td>
                                    </tr>
                                    <t t-set="sq" t-value="sq + 1"/>
                                </t>
                                <t t-if="line[0] == 1">
                                </t>
                            </t>
                        </tbody>
                    </table>

                </div>


                <div class="mt-5">
                    <h4>
                        <strong>Terms &amp; Conditions</strong>
                    </h4>
                    <hr/>
                    <span t-field="doc.note" t-attf-style="#{'text-align:justify;text-justify:inter-word;' if doc.company_id.terms_type != 'html' else ''}" name="order_note"/>
                    <p t-if="not is_html_empty(doc.payment_term_id.note)">
                        <span t-field="doc.payment_term_id.note">The payment should also be transmitted with love</span>
                    </p>
                    <p t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)"
                        id="fiscal_position_remark">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="doc.fiscal_position_id.sudo().note">No further requirements for this payment</span>
                    </p>
                </div>
            </div>
        </t>
    </template>

    <template id="custom_report_saleorder_raw">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="ld_cm_sale_customization.custom_report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="custom_report_saleorder">
        <t t-call="ld_cm_sale_customization.custom_report_saleorder_raw"/>
    </template>


    <record id="action_report_saleorder_custom_quote" model="ir.actions.report">
        <field name="name">Chintamani - Quotation / Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ld_cm_sale_customization.custom_report_saleorder</field>
        <field name="report_file">ld_cm_sale_customization.custom_report_saleorder</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
